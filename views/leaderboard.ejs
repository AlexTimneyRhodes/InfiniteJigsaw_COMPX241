<html>
  <%- include('./partials/head.ejs') %>
  <head>
    <style>
      * {
          padding: 0;
          margin: 0;
          color: #333;
          box-sizing: border-box;
          word-wrap: break-word;
          font-family: -apple-system,BlinkMacSystemFont,
          Segoe UI,Roboto,Helvetica Neue,Ubuntu,sans-serif;
      }
      .leaderboard-item{
        background-color: whitesmoke;
      }
      .l0{
        background-color: gold;
      }
      .l1{
        background-color: silver;
      }
      .l2{
        background-color: 	rgb(205, 127, 50);
      }
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }
      li p {
        font-family: Arial, Helvetica, sans-serif;
        text-decoration: none;
        font-style: normal;
        display: block;
        text-align: center;
        text-decoration: none;
        padding: 16px 14px;
      }
      li small{
        display: block;
      }
      #Difficulty, #BaseImage, #SortBy, #submitBtn {
        box-sizing: border-box;
        word-wrap: break-word;
        font-family: -apple-system,BlinkMacSystemFont,
        Segoe UI,Roboto,Helvetica Neue,Ubuntu,sans-serif;
        width: 200px;
        height: 40px;
        padding: 7px;
        margin: 5px;
        vertical-align: middle;
        background-color: whitesmoke;
        border-radius: 10px;
        border: 3px solid grey;
      }
      #submitBtn:hover{
        background-color: lightgrey;
      }
     </style>
  </head>
  <body>
    <%- include('header') %>
    <form action="/leaderboard" method="post">
      <button type="submit" id="submitBtn">Update Filters </button>
      <select name="Difficulty" id="Difficulty" required>
        <option value="">Difficulty</option>
        <option value="EASY">EASY</option>
        <option value="MEDIUM">MEDIUM</option>
        <option value="HARD">HARD</option>
        <option value="INSANE">INSANE</option>
      </select>
      <select name="BaseImage" id="BaseImage" required>
        <option value="">Base Image</option>
        <option value="LANDSCAPE">Landscape</option>
        <option value="VANGOGH">Van Gogh</option>
        <option value="PEARL_EARRING">Girl with Pearl Earring</option>
        <option value="ROMAN">In a Roman Osteria</option>
        <option value="DOG">Sleeping Dog</option>
        <option value="MONA">Mona Lisa</option>
        <option value="KITTEN">Perplexed Kittens</option>
        <option value="WAVE">The Wave Off</option>
        <option value="INTRUDER">Unwelcome Intruder</option>
      </select>
      <select name="SortBy" id="SortBy" required>
        <option value="">Sort By</option>
        <option value="Time">Time</option>
        <option value="Rounds">Rounds</option>
      </select>
    </form>
    <div id = "leaderboard-container">
    <% if(data != null) { %>
      <ul>
        <% for(var i = 0; i < data.length;i++){ %>
          <li class="leaderboard-item l<%=i%>">
            <p>
              <%= data[i][0] %>
              <small>
                <%= "Fastest Time: " + data[i][2] %>
              </small>
              <small>
                <%= "Most Rounds: " + data[i][3] %>
              </small>
            </p>

          </li>
        <% } %>
        <% if(data.length == 0) { %>
          <li class="leaderboard-item"> <p> No data found.. </p></li>
        <% } %>
      </ul>
    <% } %>
  </div>
  </body>
</html>
